<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet
            author="Elena Yankovskaya"
            id="004">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="client_categories"/>
            </not>
        </preConditions>

        <createTable
                tableName="client_categories"
                remarks="Категории клиентов">

            <column
                    name="id"
                    type="UUID"
                    remarks="Ссылка на клиента">
                <constraints
                        primaryKey="true"
                        primaryKeyName="client_categories_pkey"
                        nullable="false"/>
            </column>
            <column
                    name="category"
                    type="VARCHAR(50)"
                    remarks="Категория">
                <constraints
                        nullable="false"/>
            </column>
            <column
                    name="loyalty_points"
                    type="INT"
                    remarks="Баллы лояльности"
                    defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column
                    name="last_category_update"
                    type="DATE"
                    remarks="Дата обновления категории"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="client_categories"
                baseColumnNames="id"
                constraintName="fk_client_categories_client_id"
                referencedTableName="clients"
                referencedColumnNames="id"
                baseTableSchemaName="client_data"
                referencedTableSchemaName="client_data"
                onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>