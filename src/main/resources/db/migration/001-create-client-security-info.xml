<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
            http://www.liquibase.org/xml/ns/dbchangelog
            https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="001" author="Timoshenko_AS">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="client_security_info"/>
            </not>
        </preConditions>

        <createTable tableName="client_security_info" remarks="Информация от службы безопасности">
            <column name="id" type="UUID" remarks="Идентификатор записи">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="security_checked" type="BOOLEAN" remarks="Проверен службой безопасности">
                <constraints nullable="false"/>
            </column>
            <column name="security_date" type="TIMESTAMP" remarks="Дата проверки"/>
            <column name="security_comment" type="VARCHAR(500)" remarks="Комментарий СБ"/>
        </createTable>
    </changeSet>

</databaseChangeLog>